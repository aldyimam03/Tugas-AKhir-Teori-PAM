<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.DetailDestinationPage">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gambar_pura" />

    <TextView
        android:id="@+id/tvDeskripsiDetailDestination"
        android:layout_width="346dp"
        android:layout_height="217dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/Destination_desc"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvLocationDetailDestination"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationDetailDestination" />

    <TextView
        android:id="@+id/tvLocationDetailDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_map"
        android:fontFamily="@font/montserrat"
        android:text="  Bali, Indonesia"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvTitleDetailDestination"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDetailDestination" />

    <TextView
        android:id="@+id/tvTitleDetailDestination"
        android:layout_width="185dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pura Maharaja"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <Button
        android:id="@+id/btn_contactUs"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:backgroundTint="#3F95EC"
        android:fontFamily="@font/montserrat_bold"
        android:text="Contact Us"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvDeskripsiDetailDestination"
        app:layout_constraintTop_toBottomOf="@+id/tvDeskripsiDetailDestination" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back_button" />

    <ImageView
        android:id="@+id/btnDownload"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_download" />

</androidx.constraintlayout.widget.ConstraintLayout>